{
    "compilerOptions": {
        "target": "ES2020", // Target modern JavaScript features
        "module": "ES2020", // Use ES modules
        "moduleResolution": "node", // Resolve modules the way Node.js does
        "strict": true, // Enable all strict type-checking options
        "noUnusedLocals": true, // Report errors on unused locals
        "noUnusedParameters": true, // Report errors on unused parameters
        "noImplicitReturns": true, // Report errors on missing return statements
        "esModuleInterop": true, // Enable emit interoperability between CommonJS and ES modules
        "forceConsistentCasingInFileNames": true, // Ensure consistent casing in file names
        "outDir": "dist", // Output directory for compiled files
        "resolveJsonModule": true, // Allow importing JSON files
        "skipLibCheck": true, // Skip type checking of declaration files (speed up compilation)
        "lib": ["ES2020", "DOM"], // Include necessary libraries
        "sourceMap": true // Generate source maps for debugging
    },
    "include": ["src/**/*.ts"], // Include all TypeScript files in src folder
    "exclude": ["node_modules", "dist"] // Exclude node_modules and dist folder
}
